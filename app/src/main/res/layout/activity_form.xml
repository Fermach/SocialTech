<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlue2"
    tools:context="com.example.fermach.socialtech.MainActivity"
    android:weightSum="1">



    <TextView
        android:id="@+id/textView_nombre"
        android:background="@color/colorBlue3"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre_contacto"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/editText_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduzca un nombre"
        android:inputType="text"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView_apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue3"
        android:text="@string/apellidos_contacto"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editText_apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduzca el apellido"
        android:inputType="text"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/textView_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue3"
        android:textColor="@color/colorWhite"
        android:text="@string/numero_contacto"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/editText_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduzca el telefono"
        android:textSize="25sp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/textView_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue3"
        android:text="@string/email_contacto"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduzca el email"
        android:inputType="text"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView_formacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue3"
        android:text="@string/formacion_contacto"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        />

    <Spinner
        android:id="@+id/spinner_formacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/mi_RLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:background="@color/colorBlue1">

        <Button
            android:id="@+id/btn_alta"
            android:layout_width="143sp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@color/colorBlue3"
            android:text="AÃ±adir"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btn_cancelar" />

        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="143sp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginEnd="43dp"
            android:layout_row="0"
            android:background="@color/colorBlue3"
            android:text="Cancelar"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:layout_alignBaseline="@+id/btn_alta"
            android:layout_alignBottom="@+id/btn_alta"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


    <TextView
        android:id="@+id/textView_num_contactos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue1"
        android:text="@string/numero_contactos"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_listaContacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_row="0"
        android:background="@color/colorBlue3"
        android:text="Lista de contactos"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />


</LinearLayout>
